<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:layout_marginBottom="@dimen/top">

<RelativeLayout
    android:layout_width="match_parent" android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/sm_menu"
        android:layout_height="32dp"
        android:layout_width="32dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/menu"
        android:background="@color/colorPrimary"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:id="@+id/title"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="@dimen/text_size_large"
  />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/sm_menu"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_marginTop="@dimen/margin_top"
        android:weightSum="1">

        <EditText
            android:id="@+id/search_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/top"
            android:singleLine="true"
            android:textSize="@dimen/text_size"
            android:textColor="@color/black"
            android:background="@drawable/drawable_white"/>
        <View
            android:id="@+id/view_membership_det"
            android:layout_width="10dp"
            android:layout_height="0dp"
            android:visibility="visible"
            />
        <TextView
            android:id="@+id/search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:text="@string/search"
            android:textSize="@dimen/text_size"
            android:textAlignment="center"
            android:background="@drawable/drawable_blue"
            />


    </LinearLayout>


</RelativeLayout>
    </android.support.v7.widget.Toolbar>